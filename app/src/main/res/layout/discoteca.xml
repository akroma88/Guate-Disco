<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KALHUA"
        android:gravity="center"
        android:id="@+id/textNameDisco"
        android:layout_gravity="center_horizontal"
        android:textSize="40dp"
        android:textStyle="bold"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/bamboo"
        android:layout_marginTop="0dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageButton
            android:id="@+id/btnMapa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/destino"
            android:background="@null"
            android:paddingLeft="0dp"/>

        <ImageButton
            android:id="@+id/btnWeb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/web"
            android:background="@null"
            android:paddingLeft="15dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="zona 10 20 calle 0-35"
        android:id="@+id/textDirDisco"
        android:layout_gravity="center_horizontal"
        android:textSize="10dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0000-0000"
        android:id="@+id/textTelDisco"
        android:layout_gravity="center_horizontal"
        android:textSize="10dp"
        android:textStyle="bold"
        />
    <ImageButton
        android:layout_width="565px"
        android:layout_height="200px"
        android:id="@+id/btn_promo"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/promociones"
        android:layout_marginTop="5dip"
        />


    <RelativeLayout android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comentarios:"
            android:id="@+id/textView2"
            android:layout_marginLeft="30dip"
            android:layout_marginTop="10dip"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/com_facebook_blue"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Escribe una opinion"
            android:id="@+id/button_escribe_opinion"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dip"
            android:textAllCaps="false"
            />
    </RelativeLayout>


    <ListView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/listComment"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dip"
        />

</LinearLayout>